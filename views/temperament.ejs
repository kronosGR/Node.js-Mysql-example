<!DOCTYPE html>
<html>

<head>
  <title> DAB - Adopt Animal</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheets/styles.css">
  <script src="../js/common.js"></script>

</head>

<body>
  <%- include('./partials/navbar.ejs', {user: user}) %>
  <div class="container-fluid mt-5">
    <h2 class="p-3 text-center">Animals for Adoption - Temperament</h2>
    <div class="list-group">
      <div class="row px-3 py-1 w-100">
        <span class="col py-1 bg-noroff">Id</span>
        <span class="col py-1 bg-noroff">Name</span>

        <%if (user && user.role===1) {%>
        <span class="col py-1 bg-noroff">Options</span>
        <%}%>
      </div>
      <% temperament.forEach(function(temp) { %>
        <div class="row px-3 py-1 w-100">
          <span class="col py-1 bg-light">
            <%=temp.id%>
          </span>
          <span class="col py-1 bg-light">
            <%=temp.name%>
          </span>
          <span class="col py-1 bg-light text-center">

            <%if (user && user.role===1) {%>
            <button class="btn-sm btn-warning" onclick='updateTemperament("<%=temperament.url%>","<%=temp.id%>")'>Update
              temperament</button>
            <button class="btn-sm btn-danger" onclick='deleteTemperament("<%=temperament.url%>","<%=temp.id%>")'>Delete
              temperament</button>
            <%}%>
        </span>
      </div>
      <% }); %>
            <hr>
            <div class="row">
              <div class="col-4"></div>
              <div class="col-4 text-center mt-2">
                <%if (user && user.role===1) {%>
                <form action="/temperament/add" method="POST">
                  <button class="btn btn-success" id="btn-add-animal">Add New Temperament</button>
                </form>
                <%}%>
        </div>
        <div class="col-4"></div>
      </div>
    </div>
  </div>
</body>

</html>