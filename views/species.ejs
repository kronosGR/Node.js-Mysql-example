<!DOCTYPE html>
<html>

<head>
  <title> DAB - Adopt Animal</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheets/styles.css">
  <script src="../js/common.js"></script>
</head>

<body>
  <%- include('./partials/navbar.ejs', {user: user}) %>
  <div class="container-fluid mt-5">
    <h2 class="p-3 text-center">Animals for Adoption - species</h2>
    <div class="list-group">
      <div class="row px-3 py-1 w-100">
        <span class="col py-1 bg-noroff">Id</span>
        <span class="col py-1 bg-noroff">Name</span>
        <%if (user && user.role===1) {%>
        <span class="col py-1 bg-noroff">Options</span>
        <%}%>
      </div>
      <% species.forEach(function(specie) { %>
        <div class="row px-3 py-1 w-100">
          <span class="col py-1 bg-light">
            <%=specie.id%>
          </span>
          <span class="col py-1 bg-light">
            <%=specie.Name%>
          </span>
          <span class="col py-1 bg-light text-center">
            <%if (user && user.role===1) {%>
            <button class="btn-sm btn-warning" onclick='updateSpecies("<%=species.url%>","<%=specie.id%>")'>Update
              species</button>
            <button class="btn-sm btn-danger" onclick='deleteSpecies("<%=species.url%>","<%=specie.id%>")'>Delete
              species</button>
            <%}%>
        </span>
      </div>
      <% }); %>
            <hr>
            <div class="row">
              <div class="col-4"></div>
              <div class="col-4 text-center mt-2">
                <%if (user && user.role===1) {%>
                <button class="btn btn-success" id="btn-add-animal" onclick='addSpecie("<%=species.url%>")'>Add
                  New Temperament</button>

                <%}%>
              </div>
              <div class="col-4"></div>
            </div>
        </div>
      </div>
</body>

</html>